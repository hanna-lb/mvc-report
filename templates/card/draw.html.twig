{# templates/card/draw.html.twig #}
{% extends "base.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

<h1>{{ title }}</h1>

<p>Kort kvar i kortleken: {{ count }}</p>

{% if drawnCards %}
<h2>Du drar 1 kort:</h2>
<div class="card-wrapper">
{% for card in drawnCards %}
    <div class="card {{ card.colour }}">
        <div class="corner top">
            {{ card.value }}
            <div class="{{ card.colour }}"></div>
        </div>
        <div class="pip {{ card.colour }}"></div>
        <div class="corner bottom">
            {{ card.value }}
            <div class="{{ card.colour }}"></div>
        </div>
    </div>
{% endfor %}
</div>

<h2>Din hand:</h2>
<div class="card-wrapper">
{% for card in hand %}
    <div class="card {{ card.colour }}">
        <div class="corner top">
            {{ card.value }}
            <div class="{{ card.colour }}"></div>
        </div>
        <div class="pip {{ card.colour }}"></div>
        <div class="corner bottom">
            {{ card.value }}
            <div class="{{ card.colour }}"></div>
        </div>
    </div>
{% endfor %}
</div>
{% endif %}

<p><a href="{{path('card-home')}}">Gå tillbaka till överblickssidan</a></p>

{% endblock %}
